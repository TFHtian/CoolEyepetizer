<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.cooleyepetizer.app.adapter.ConverterDateTimeUtil"/>
        <variable
                name="item"
                type="com.cooleyepetizer.app.entity.eye_video.EyeListItemBean" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:paddingTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingBottom="@dimen/dp_10">
            <ImageView
                    android:id="@+id/im_author_head"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    imageCircleFromUrl="@{item.data.content.data.author.icon}"/>
            <TextView
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier='1.5'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14sp"
                    android:text="@{item.data.content.data.author.name}"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/textTitleColor"
                    android:layout_alignTop="@+id/im_author_head"
                    android:layout_toRightOf="@+id/im_author_head"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/textGrayColor"
                    android:layout_toRightOf="@+id/im_author_head"
                    android:text="@{@string/release_date(ConverterDateTimeUtil.formatDate(item.data.content.data.releaseTime))}" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSubTitleColor"
                    android:text="@{item.data.content.data.description}"/>
            <TextView
                    android:textStyle="bold"
                    android:text="@string/more"
                    android:textSize="@dimen/text_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/textTitleColor"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220">
            <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginTop="@dimen/dp_10"
                    imageTransFromUrl="@{item.data.content.data.cover.detail}"/>
            <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/home_video_time_tv_sp"
                    android:text="@{ConverterDateTimeUtil.formatSeconds(item.data.content.data.duration)}"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15">
           <LinearLayout
                   android:layout_weight="2"
                   android:orientation="horizontal"
                   android:gravity="center_vertical"
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="wrap_content">
               <ImageView
                       android:src="@drawable/video_like"
                       android:layout_width="@dimen/dp_20"
                       android:layout_height="@dimen/dp_20"/>
               <TextView
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_13sp"
                       android:layout_marginLeft="@dimen/dp_15"
                       android:textColor="@color/textGrayColor"
                       android:text="@{String.valueOf(item.data.content.data.consumption.shareCount)}"/>
           </LinearLayout>
            <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/video_comment"/>
                <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13sp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/textGrayColor"
                        android:text="@{String.valueOf(item.data.content.data.consumption.replyCount)}"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/video_collection"/>
                <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_13sp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/textGrayColor"
                        android:text="@{String.valueOf(item.data.content.data.consumption.collectionCount)}"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical">
                <ImageView
                        android:src="@drawable/share"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/line_color"
                android:layout_marginBottom="@dimen/dp_15"/>
    </LinearLayout>

</layout>