<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="item"
                type="com.cooleyepetizer.app.entity.eye_video.EyeListItemBean" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:paddingTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingBottom="@dimen/dp_10">
            <ImageView
                    android:id="@+id/im_author_head"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    imageCircleFromUrl="@{item.data.content.data.author.icon}"/>
            <TextView
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier='1.5'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14sp"
                    android:text="@{item.data.content.data.author.name}"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/textTitleColor"
                    android:layout_alignTop="@+id/im_author_head"
                    android:layout_toRightOf="@+id/im_author_head"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/textGrayColor"
                    android:layout_toRightOf="@+id/im_author_head"
                    android:text="2020/06/05发布:" />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSubTitleColor"
                    android:text="@{item.data.content.data.description}"/>
            <TextView
                    android:textStyle="bold"
                    android:text="@string/more"
                    android:textSize="@dimen/text_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/textTitleColor"/>
        </RelativeLayout>
        <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:layout_marginTop="@dimen/dp_10"
                imageTransFromUrl="@{item.data.content.data.cover.detail}"/>

        <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/community_follow_info_sp">
            <TextView
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:id="@+id/tv_category"
                    android:lineSpacingMultiplier='1.5'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14sp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/textTitleColor"
                    android:text="@{@string/category_name(item.data.content.data.category)}"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12sp"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_below="@+id/tv_category"
                    android:textColor="@color/textGrayColor"
                    android:text="@{item.data.content.data.title}"/>

            <TextView
                    android:textStyle="bold"
                    android:text="@string/join"
                    android:textSize="@dimen/text_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textTitleColor"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/line_color"
                android:layout_marginBottom="@dimen/dp_10"/>
    </LinearLayout>

</layout>