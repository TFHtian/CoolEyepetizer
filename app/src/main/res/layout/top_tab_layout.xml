<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/top_tab_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorThemeBg"
            app:contentInsetStart="0.0dp"
            app:contentInsetStartWithNavigation="0.0dp"
            app:layout_scrollFlags="enterAlways|scroll"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarStyle">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorThemeBg"
                android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/tab_top"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorThemeBg"
                    tl:tl_indicator_color="@color/textTitleColor"
                    tl:tl_indicator_corner_radius="@dimen/dp_1_5"
                    tl:tl_indicator_height="@dimen/dp_3"
                    tl:tl_indicator_width="@dimen/dp_10"
                    tl:tl_textBold="SELECT"
                    tl:tl_textSelectColor="@color/textTitleColor"
                    tl:tl_textUnselectColor="@color/main_bottom_tv_n" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>