<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tl="http://schemas.android.com/apk/res-auto">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlDragRate="0.75"
            app:srlEnableLoadMore="true"
            app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.zhpan.bannerview.BannerViewPager
                        android:id="@+id/banner_find"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_220"
                        android:layout_marginTop="@dimen/dp_5"
                        app:bvp_indicator_slide_mode="worm"
                        app:bvp_page_style="multi_page" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15">

                    <View
                            android:layout_width="@dimen/dp_4"
                            android:layout_height="@dimen/dp_25"
                            android:background="@color/textTitleColor" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="@string/hot_rank"
                            android:textColor="@color/textTitleColor"
                            android:textSize="@dimen/text_20sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <com.flyco.tablayout.SegmentTabLayout
                        android:id="@+id/tab_rank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingRight="@dimen/dp_30"
                        tl:tl_indicator_anim_enable="true"
                        tl:tl_indicator_bounce_enable="false"
                        tl:tl_indicator_margin_bottom="@dimen/dp_2"
                        tl:tl_indicator_margin_left="@dimen/dp_2"
                        tl:tl_indicator_margin_right="@dimen/dp_2"
                        tl:tl_indicator_margin_top="@dimen/dp_2"
                        tl:tl_tab_space_equal="true" />

                <com.cooleyepetizer.app.view.NoTouchViewPager
                        android:id="@+id/view_page_rank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_350" />

                <include layout="@layout/bottom_end_layout" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</layout>